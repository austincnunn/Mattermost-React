{
  "name": "mattermost-react",
  "version": "1.0.3",
  "description": "Mattermost desktop client built with Electron and React",
  "author": "austincnunn",
  "main": "electron/main.js",
  "scripts": {
    "start": "concurrently \"npm run vite-dev\" \"wait-on http://localhost:5173 && cross-env ELECTRON_START_URL=http://localhost:5173 electron .\"",
    "vite-dev": "vite",
    "vite-build": "vite build",
    "vite-preview": "vite preview",
    "electron-start": "electron .",
    "build": "vite build && electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "extends": "electron-builder.yml"
  },
  "dependencies": {
    "electron-store": "^8.2.0",
    "electron-updater": "^6.3.9"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^40.0.0",
    "electron-builder": "^26.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "vite": "^6.0.7",
    "wait-on": "^8.0.2"
  }
}
